# Australian Cyber Events Scraper - Environment Configuration Template
# Copy this file to .env and fill in your API keys

# Perplexity API Configuration
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Google Cloud Configuration (for GDELT)
GDELT_PROJECT_ID=your_gcp_project_id
GOOGLE_CLOUD_PROJECT=your_gcp_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# Google Custom Search API (for Google Search data source)
GOOGLE_CUSTOMSEARCH_API_KEY=your_google_search_api_key
GOOGLE_CUSTOMSEARCH_CX_KEY=your_google_search_cx_key

# OpenAI API (if using OpenAI models)
OPENAI_API_KEY=your_openai_api_key

# Database Configuration
DATABASE_URL=sqlite:///instance/cyber_events.db
